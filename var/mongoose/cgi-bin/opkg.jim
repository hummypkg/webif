#!/mod/bin/jimsh

package require cgi
source /mod/var/mongoose/lib/setup
require pkg.class chunked

cgi_input
#cgi_dump

set cmd [cgi_get cmd update]

start_chunked

set bcmd "|/mod/var/mongoose/lib/opkg $cmd"
set fd [open $bcmd r]
while {[gets $fd line] >= 0} {
	chunk "$line\r\n"
	#chunk_pad
}
close $fd

if {$cmd eq "update"} {
	chunk "Updating package meta information\r\n"
	pkg fetchmeta
	chunk "Done.\r\n"
}

end_chunked

