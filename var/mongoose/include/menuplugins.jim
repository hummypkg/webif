#!/mod/bin/jimsh

source /mod/var/mongoose/lib/setup
require plugin system.class

proc menuitem {title icon link {width 217} {height 0}} {
	puts -nonewline "
<div class=left>
	<center>
	<a href=$link>
		<img src=$icon border=0 width=$width"
	if {$height} { puts -nonewline " height=$height" }
	puts -nonewline ">
	</a>
	<br>
	<a href=$link>
	<b>$title</b>
	</a>
	<br>
	</center>
</div>
"
}

eval_plugins menu

